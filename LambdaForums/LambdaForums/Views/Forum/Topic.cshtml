@model LambdaForums.Models.ForumTopicModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Topic</title>
</head>
<body>
    <h1>Welcome to the @Model.Forum.Name Forum!</h1>

    @if(Model.Posts.Any())
    {
        <table class="table table-bordered table-hover">
            <tbody>
                @foreach(var post in Model.Posts)
                {
                <tr>                    
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">@post.Title</a>
                    </td>
                    @*<td>@post.AuthorName</td>*@
                    <td>@post.DatePosted</td>
                    <td>@post.RepliesCount</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="noPosts">
            <h3>It looks like there are no @Model.Forum.Name posts yet. <br />
            Wht not
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>create</span>
            </a>
            </h3>
        </div>
    }
</body>
</html>
